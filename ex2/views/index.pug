extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Eurovision Song Contest Editions
    
    .w3-container
      table.w3-table.w3-striped.w3-bordered
        thead
          tr.w3-blue
            th ID Edição
            th Ano
            th País Organizador
            th País Vencedor
        tbody
          each edicao in edicoes
            tr
              td
                a(href=`/${edicao._id}`)= edicao._id
              td= edicao.anoEdição
              td
                a(href=`/paises/${edicao.organizacao}`)= edicao.organizacao
              td
                if edicao.vencedor
                  a(href=`/paises/${edicao.vencedor}`)= edicao.vencedor
                else
                  | Sem Vencedor