extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 País: #{pais}
      a.w3-button.w3-margin-bottom.w3-white(href='/') Voltar à Página Principal
    
    .w3-container
      h3 Participações
      table.w3-table.w3-striped.w3-bordered
        thead
          tr.w3-blue
            th ID Edição
            th Ano
            th Música
            th Intérprete
            th Venceu?
        tbody
          each participacao in participacoes
            tr
              td
                a(href=`/${participacao.edicaoId}`)= participacao.edicaoId
              td= participacao.ano
              td= participacao.musicas[0].título
              td= participacao.musicas[0].intérprete
              td= participacao.venceu ? 'Sim' : 'Não'

      //- Tabela de Organizações (filtrada diretamente de participacoes)
      - var organizacoes = participacoes.filter(p => p.organizou)
      if organizacoes.length > 0
        h3.w3-margin-top Organizações
        table.w3-table.w3-striped.w3-bordered
          thead
            tr.w3-blue
              th ID Edição
              th Ano
          tbody
            each org in organizacoes
              tr
                td
                  a(href=`/${org.edicaoId}`)= org.edicaoId
                td= org.ano
    
    footer.w3-container.w3-blue.w3-margin-top

